<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Abd" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_abd</item>
        <item name="popupMenuStyle">@style/PopupMenu.Abd</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Abd</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Abd</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Abd</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Abd</item>
        <item name="actionModeBackground">@drawable/cab_background_top_abd</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_abd</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Abd</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Abd.Widget</item>

    </style>

    <style name="ActionBar.Solid.Abd" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_abd</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_abd</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_abd</item>
        <item name="progressBarStyle">@style/ProgressBar.Abd</item>
    </style>

    <style name="ActionBar.Transparent.Abd" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_abd</item>
        <item name="progressBarStyle">@style/ProgressBar.Abd</item>
    </style>

    <style name="PopupMenu.Abd" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_abd</item>
    </style>

    <style name="DropDownListView.Abd" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_abd</item>
    </style>

    <style name="ActionBarTabStyle.Abd" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_abd</item>
    </style>

    <style name="DropDownNav.Abd" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_abd</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_abd</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_abd</item>
    </style>

    <style name="ProgressBar.Abd" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_abd</item>
    </style>

    <style name="ActionButton.CloseMode.Abd" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_abd</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Abd.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Abd</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Abd</item>
    </style>


</resources>
